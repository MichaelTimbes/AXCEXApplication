@model AXCEX_ONLINE.Models.EmployeeModel

@{
    ViewData["Title"] = "EmployeeHome";
}

<h2>@Model.UserName Home</h2>


<!--<a role="button" asp-controller="Employee" asp-action="EditEmployee">Edit Account</a>-->
<div class="row">
    <div class="col-sm-4 card text-white bg-primary mb-3" style="max-width: 50rem;">
        <div class="card-header">Employee Account Navigation:</div>
        <div class="card-body">
            <h5 class="card-title">Hello, @Model.EMP_FNAME.</h5>
            <p class="card-text">
                Below are links to edit your account information and manage other account
                related information.
            </p>
            <div class="row">
                <form asp-action="EditEmployee">
                    <button class="btn-primary" type="submit" formmethod="get">Edit Account</button>
                </form>

            </div>
        </div>
    </div>

    <div class="col-sm-4 card text-white bg-primary mb-3" style="max-width: 50rem;">
        <div class="card-header">Employee Projects Navigation:</div>
        <div class="card-body">
            <h5 class="card-title">Projects Assigned:</h5>
            <p class="card-text">
                Here you'll find tools to track project progress and view work assigned.
            </p>
            <div class="row">

                <form asp-action="ViewAssignedProjects">
                    <input type="hidden" asp-for="EMPID" />
                    <button class="btn-info" type="submit" formmethod="get">Assigned Projects</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="justify-content-md-center">
    @await Component.InvokeAsync("ProjectVC", new { id = @Model.EMPID })
</div>


