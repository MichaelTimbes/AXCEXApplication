@model IEnumerable<AXCEX_ONLINE.Models.EmployeeViewModels.EmployeeViewAssignedProjectsVM>

@{
    ViewData["Title"] = "Index";
}

<h2>Your Assigned Projects</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project_Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Assigned_By)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Start_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Due_Date)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assigned_By)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Due_Date)
            </td>
            <td>
                <div class="row">
                    <form>
                        <button formmethod="get" class="btn-sm btn-info" type="submit">Tasks</button>
                    </form>

                    <form asp-action="Index">
                        <button formmethod="get" class="btn-sm btn-warning" type="submit"> Scope</button>
                    </form>
                    <!--
    <a asp-action="EditEmployee">Scope</a>
    <a asp-action="Details">Tasks</a>
    <a asp-action="Delete">Issues</a>-->
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
