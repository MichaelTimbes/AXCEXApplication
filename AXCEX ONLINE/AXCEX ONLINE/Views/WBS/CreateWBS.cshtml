@model AXCEX_ONLINE.Models.WBSViewModels.WBSCreateVM

@{
    ViewData["Title"] = "Assign WBS";
}

<h2>Create</h2>

<h4>WBSModel</h4>
<h3 class="text-info">@ViewBag.Msg</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateWBS">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--HIDDEN-->
            <div class="form-group">
                <input type="hidden" asp-for="ProjectId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AssignedBy" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="WBSSummary" class="control-label"></label>
                <textarea asp-for="WBSSummary" class="form-control"></textarea>
                <span asp-validation-for="WBSSummary" class="text-danger"></span>
            </div>
                
                <div class="form-group">
                    <label asp-for="WBSHours" class="control-label"></label>
                    <input asp-for="WBSHours" class="form-control" />
                    <span asp-validation-for="WBSHours" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WBSCost" class="control-label"></label>
                    <input asp-for="WBSCost" class="form-control" />
                    <span asp-validation-for="WBSCost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="WBS" asp-action="Index">Back to List</a>
</div>

