@model ProjectCreateViewClass

@{
    ViewData["Title"] = "CreateProject";
}
<!-- ONLY ADMIN CAN CREATE PROJECTS-->
<h2>CreateProject</h2>

<h4>ProjectModel</h4>
<hr />

<p class="text-danger">
   @ViewData["ErrorMsg"]
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustEmail" class="control-label"></label>
                <input asp-for="CustEmail" class="form-control" />
                <span asp-validation-for="CustEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjBudget" class="control-label"></label>
                <input asp-for="ProjBudget" class="form-control" />
                <span asp-validation-for="ProjBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjCost" class="control-label"></label>
                <input asp-for="ProjCost" class="form-control" />
                <span asp-validation-for="ProjCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjStart" class="control-label"></label>
                <input asp-for="ProjStart" class="form-control" />
                <span asp-validation-for="ProjStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjEnd" class="control-label"></label>
                <input asp-for="ProjEnd" class="form-control" />
                <span asp-validation-for="ProjEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

