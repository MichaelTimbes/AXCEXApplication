@model IEnumerable<ProjectAssignEmpViewModel>

@{
    ViewData["Title"] = "CreateProject";
}
<h2>@ViewData["Message"]</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Project ID
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Employee ID
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project_ID)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Employee_Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Employee_ID)
            </td>


            <td>
                
                <form asp-controller="Project" asp-action="AssignEmployeeto"  method="post" role="form">
                    <div>
                        <button type="submit" class="btn-sm btn-success" name="empid" value="@item.Employee_ID"><span class="glyphicon glyphicon-plus"></span> Add</button>
                    </div>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>


