@model IEnumerable<AXCEX_ONLINE.Models.ComponentViewModels.CustomerProjectCompVM>
@{
    ViewData["Title"] = "Customer Projects";
}

        <table class="table" style="min-width:310px;max-width:1000px">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Project_Name) Name
                    </th>

                    <th>
                       Progress
                    </th>
                    

                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!-- LIST OF PROJECTS -->
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Project_Name)
                        </td>
                       
                            <!-- PROGRESS BAR-->
                        <td>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" title="@item.ProgressPercent.ToString()% Complete" role="progressbar" style="width: @item.ProgressPercent.ToString()%" aria-valuenow="@item.ProgressPercent.ToString()" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>

                        </td>
         
                        <td></td>
                        <!-- NAVIGATION -->
                        <td>
                            <div class="row">
                                <a role="button" class="btn btn-info" style="max-width:85px" title="View Tasks" asp-controller="Scope" asp-action="ViewScope" asp-route-id="@item.ProjectId"><span class="glyphicon glyphicon-list-alt"></span> Tasks</a>

                                <a role="button" class="btn btn-warning" style="max-width:85px" title="View Scope" asp-controller="Scope" asp-action="ViewScope" asp-route-id="@item.ProjectId"><span class="glyphicon glyphicon-globe"></span> Scope</a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
      

