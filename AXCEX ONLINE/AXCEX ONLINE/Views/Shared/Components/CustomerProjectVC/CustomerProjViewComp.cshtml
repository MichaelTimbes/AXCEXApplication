@model IEnumerable<AXCEX_ONLINE.Models.ComponentViewModels.CustomerProjectCompVM>
@{
    ViewData["Title"] = "Customer Projects";
}


<div class="col-sm-8 card text-white bg-primary mb-3" style="max-width: 30rem;">
    @*<div class="card-header">Projects Navigation:</div>*@
    <div class="card-body">
        <h5 class="card-title">@ViewData["Title"]</h5>
        <p class="card-text">
            @ViewData["Message"]
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Project_Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.ProgressPercentage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ActiveProj)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Project_Name)
                        </td>
                       
                            
                        <td>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" title="@item.ProgressPercentage.ToString()% Complete" role="progressbar" style="width: @item.ProgressPercentage.ToString()%" aria-valuenow="@item.ProgressPercentage.ToString()" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>

                            @*@Html.DisplayFor(modelItem => item.ProgressPercentage) %*@
                        </td>
                       

                        <td>
                            @Html.DisplayFor(modelItem => item.ActiveProj)
                        </td>
                        <td>
                            <div class="row">
                                <form>
                                    <button formmethod="get" class="btn-sm btn-info" asp-id="@item.ProjectId" type="submit">Tasks</button>
                                </form>

                                <form>
                                    <button formmethod="get" class="btn-sm btn-warning" type="submit"> Scope</button>
                                </form>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>


