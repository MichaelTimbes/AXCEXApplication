@using Microsoft.AspNetCore.Identity
@using AXCEX_ONLINE.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                @if (User.IsInRole("Employee"))
        {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="EmployeeHome" title="Employee Home Page">Dashboard</a>
        </li>

        <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="EditEmployee" title="Edit Employee">Profile</a>
        </li>
}
else if (User.IsInRole("Administrator"))
{
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="AdminHome" title="Admin Home Page"> Admin Dashboard</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage Admin">Admin Profile</a>
        </li>
}
else if (User.IsInRole("Customer"))
{
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="CustomerHome" title="Customer Home Page">Dashboard</a>
        </li>
}

        <li><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout" title="Log Out">Log Out</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register" title="Register">Register</a></li>
        <li><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login" title="Login">Log in</a></li>
    </ul>
}
